{
  	"name": "sdscheme",
	"displayName": "sdScheme",
	"description": "very very small Scheme Interpreter",
	"publisher": "sigmadream",
	"repository": "https://github.com/sigmadream/sd-scheme-vs-extension.git",
	"version": "1.5.0",
	"author": {
        "name": "Sangkon Han"
    },
	"engines": {
		"vscode": "^1.107.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"activationEvents": [
		"onLanguage:scheme"
	],
	"contributes": {
		"commands": [
			{
				"command": "sdscheme.run",
				"title": "sdScheme: Run All Code",
				"category": "sdScheme"
			},
			{
				"command": "sdscheme.runSelection",
				"title": "sdScheme: Run Selection",
				"category": "sdScheme"
			},
			{
				"command": "sdscheme.clearOutput",
				"title": "sdScheme: Clear Output",
				"category": "sdScheme"
			},
			{
				"command": "sdscheme.showEnvironment",
				"title": "sdScheme: Show Environment",
				"category": "sdScheme"
			}
		],
		"keybindings": [
			{
				"command": "sdscheme.run",
				"key": "ctrl+enter",
				"when": "editorTextFocus && editorLangId == 'scheme'"
			},
			{
				"command": "sdscheme.runSelection",
				"key": "ctrl+shift+enter",
				"when": "editorTextFocus && editorLangId == 'scheme'"
			}
		],
		"languages": [
			{
				"id": "scheme",
				"aliases": ["Scheme", "scheme"],
				"extensions": [".scheme", ".scm", ".rkt"],
				"configuration": "./sdscheme.configuration.json"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts",
		"test": "npm run compile && node out/test-runner.js",
		"test:file": "npm run compile && node out/test-runner.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.107.0",
		"@types/glob": "^9.0.0",
		"@types/node": "^25.0.3",
		"@typescript-eslint/eslint-plugin": "^8.50.0",
		"@typescript-eslint/parser": "^8.50.0",
		"eslint": "^9.39.2",
		"glob": "^13.0.0",
		"typescript": "^5.9.3"
	}
}
